<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if(errorMessage) { %>
            <div class='user-message user-message--error'>
                <%= errorMessage %>
            </div>
        <% } %>
        <% if(infoMessage) { %>
            <div class='user-message user-message--info'>
                <%= infoMessage %>
            </div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <div class="form-control">
                <label for="email">Email</label>
                <input 
                    class="<%= validationErrors.find(el => el.param === 'email') ? 'invalid' : '' %>"
                    type="text" 
                    name="email" 
                    id="email" 
                    value="<%= oldInput.email %>" required>
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input 
                    class="<%= validationErrors.find(el => el.param === 'password') ? 'invalid' : '' %>"
                    type="password" 
                    name="password" 
                    id="password"
                    value="<%= oldInput.email %>" required>
            </div>
            <div class="pwd-reset centered">
                <a href="/reset" class="pwd-reset--link">Reset Password</a>
            </div>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <button class="btn" type="submit">  
                Login
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %></body>